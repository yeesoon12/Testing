<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Testing" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        // Main theme color
        <item name="colorPrimary">@color/gold</item>
        // Status Bar color
        <item name="colorPrimaryVariant">@color/blue</item>
        // Inner word (On button) color
        <item name="colorOnPrimary">@color/black</item>
        // Full Background theme color
        <item name="android:colorBackground">@color/purple_200</item>
        <item name="color">@color/yellow</item>


        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->


    </style>
</resources>